@model CookieAuthentication.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <div class="form-group mb-3">
                <label asp-for="Username" for="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="johndoe" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" for="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="P@ssW0rd!" />
                   <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3 d-grid">
                <button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-right-to-bracket me-2"></i>Login</button>
            </div>
        </form>
    </div>
</div>